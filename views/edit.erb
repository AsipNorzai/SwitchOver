<form class="form-horizontal" action="/posts/<%= @post.id %>" method="post">
      <div class="form-group">
      <input type="hidden" name="_method" value="put">
    </div>
     <div class="form-group">
        <label class="col-sm-2 control-label" for="">Categories</label>
        <div class="col-sm-10">
          <input class="form-control" name="categories" type="text" value="<%= @post.categories %>">
        </div>
      </div>

       <div class="form-group">
        <label class="col-sm-2 control-label" for="">Title</label>
        <div class="col-sm-10">
          <input class="form-control" name="heading" type="text" value="<%= @post.heading %>">
        </div>
      </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" for="">Want</label>
        <div class="col-sm-10">
          <input class="form-control" name="want" type="text" value="<%= @post.want %>">
        </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" for="">Give</label>
        <div class="col-sm-10">
          <input class="form-control" name="give" type="text" value="<%= @post.give %>">
        </div>
      </div>

      <div class="form-group">
        <label class="col-sm-2 control-label" for="">Info</label>
        <div class="col-sm-10">
          <textarea class="form-control" name="body" rows="3" cols="40" ><%= @post.body %></textarea>
        </div>
      </div>

    <div class="form-group">
        <label class="col-sm-2 control-label">Image url</label>
      <div class="col-sm-10">
        <input class="form-control" name="image" type="text" value="<%= @post.image %>">
      </div>
    </div>

    <div class="form-group">
        <label class="col-sm-2 control-label" for="">avaliablity</label>
        <div class="col-sm-10">
          <input  class="form-control" name="avaliablity" type="date" value="<%= @post.avaliablity %>">
        </div>
    </div>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-10">
        <button class="btn btn-primary">Update Post</button>
      </div>
    </div>
</form>
