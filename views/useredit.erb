<h1>Edit User Info</h1><br>
    <form class="user-edit" action="/useredit" method="post">

      <input type="hidden" name="_method" value="put">
      <div class="form-group">
        <label  class=" col-sm-2 control-label">First Name</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="firstname" value="<%= current_user.firstname %>">
        </div>
      </div>

       <div class="form-group">
        <label  class=" col-sm-2 control-label">Last Name</label>
        <div class="col-sm-10">
          <input class="form-control" type="text" name="lastname" value="<%= current_user.lastname %>">
        </div>
      </div>

     <div class="form-group">
      <label  class=" col-sm-2 control-label" for="">Email</label>
      <div class="col-sm-10">
        <input class="form-control" type="email" name="email" value="<%= current_user.email %>">
      </div>
    </div>

     <div class="form-group">
      <label  class=" col-sm-2 control-label" for="">Mobile</label>
      <div class="col-sm-10">
        <input class="form-control" type="tel" name="mobile" value="<%= current_user.mobile %>">
      </div>
    </div>

     <div class="form-group">
      <label  class=" col-sm-2 control-label" for="">Address</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="address" value="<%= current_user.address %>">
      </div>
    </div>

     <div class="form-group">
      <label  class=" col-sm-2 control-label" for="">Postcode</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="postcode" value="<%= current_user.postcode %>">
      </div>
    </div>

     <div class="form-group">
      <label  class=" col-sm-2 control-label" for="">Suburb</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="suburb" value="<%= current_user.suburb %>">
      </div>
    </div>

     <div class="form-group">
      <label  class=" col-sm-2 control-label" for="">State</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="state" value="<%= current_user.state %>">
      </div>
    </div>

   <div class="form-group">
      <label  class=" col-sm-2 control-label" for="">image</label>
      <div class="col-sm-10">
        <input class="form-control" type="text" name="image" value="<%= current_user.image %>">
      </div>
    </div>
 <div class="form-group">
   <div class="col-sm-offset-2 col-sm-10">
      <button class="btn btn-default">Save</button>
    </div>
  </div>
</form>
