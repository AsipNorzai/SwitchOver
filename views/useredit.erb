<div class="container">
  <h1>Edit User Info</h1><br>
    <form class="user-edit" action="/useredit" method="post">

      <input type="hidden" name="_method" value="put">
    <div class="form-group">
      <label>First Name</label>
      <input type="text" name="firstname" value="<%= current_user.firstname %>">
    </div>

     <div class="form-group">
      <label>Last Name</label>
      <input type="text" name="lastname" value="<%= current_user.lastname %>">
    </div>

     <div class="form-group">
      <label for="">Email</label>
      <input type="email" name="email" value="<%= current_user.email %>">
    </div>

     <div class="form-group">
      <label for="">Mobile</label>
      <input type="tel" name="mobile" value="<%= current_user.mobile %>">
    </div>

     <div class="form-group">
      <label for="">Address</label>
      <input type="text" name="address" value="<%= current_user.address %>">
    </div>

     <div class="form-group">
      <label for="">Postcode</label>
      <input type="text" name="postcode" value="<%= current_user.postcode %>">
    </div>

     <div class="form-group">
      <label for="">Suburb</label>
      <input type="text" name="suburb" value="<%= current_user.suburb %>">
    </div>

     <div class="form-group">
      <label for="">State</label>
      <input type="text" name="state" value="<%= current_user.state %>">
    </div>

   <div class="form-group">
      <label for="">image</label>
      <input type="text" name="image" value="<%= current_user.image %>">
    </div>
    
      <button class="btn btn-success">Save</button>
    </form>
</div>
