<form action="/posts" method="post">
  <div class="form-group">
  <label class=" col-sm-2 control-label" for="">Categories</label>
  <div class="col-sm-10">
  <input class="form-control" name="categories" type="text">
  </div>
</div>

<div class="form-group">
  <label class=" col-sm-2 control-label" class=" col-sm-2 control-label" for="">Title</label>
  <div class="col-sm-10">
  <input class="form-control" name="heading" type="text">
</div>
</div>

<div class="form-group">
  <label class=" col-sm-2 control-label" class=" col-sm-2 control-label" for="">Want</label>
  <div class="col-sm-10">
  <input class="form-control" name="want" type="text">
  </div>
</div>

<div class="form-group">
  <label class=" col-sm-2 control-label" class=" col-sm-2 control-label" for="">Give</label>
  <div class="col-sm-10">
  <input class="form-control" name="give" type="text">
</div>
</div>

<div class="form-group">
  <label class=" col-sm-2 control-label" class=" col-sm-2 control-label" for="">Info</label>
  <div class="col-sm-10">
  <textarea class="form-control" name="body" rows="5" cols="80"></textarea>
  </div>
</div>

<div class="form-group">
  <label class=" col-sm-2 control-label" class=" col-sm-2 control-label" for="">Image url</label>
  <div class="col-sm-10">
  <input class="form-control" name="image" type="text">
</div>
</div>

<div class="form-group">
  <label class=" col-sm-2 control-label" for="">avaliablity</label>
  <div class="col-sm-10">
  <input name="avaliablity" type="date">
</div>
</div>
<div class="form-group">
  <div class="col-sm-offset-2 col-sm-10">
  <button class="btn btn-success">Create Post</button>
</div>
</div>
</form>
